---
import Navbar from "./Navbar.astro";

interface Props {
  linkedIn: string;
  email: string;
  gitHub: string;
}

const { linkedIn, email, gitHub } = Astro.props;
---

<div
  class="xl:min-h-screen xl:h-screen flex flex-col xl:justify-between space-y-8 xl:top-0 xl:sticky pt-5 pb-28 xl:py-30"
>
  <div class="space-y-3">
    <h1 class="text-5xl font-bold text-gray-900">
      Fadel Najmi <span class="2xl:hidden inline">A.</span>
      <span class="2xl:inline hidden">Adliansyah</span>
    </h1>
    <h2 class="text-2xl font-medium text-gray-600">Full-Stack Engineer</h2>
    <p class="text-gray-700 max-w-xl pt-3 leading-relaxed text-lg">
      I build reliable, scalable systems and intuitive
      <br class="hidden xl:block" />
      interfaces that feel effortless to use.
    </p>
    <nav aria-label="Main navigation" class="hidden xl:block xl:mt-20">
      <Navbar />
    </nav>
  </div>

  <nav aria-label="Social media links">
    <ul class="flex space-x-4 text-gray-600">
      <li>
        <a
          href={gitHub}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-gray-900 transition-colors"
          aria-label="GitHub"
          onclick="event.stopPropagation()"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="25"
            height="25"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="fa-github"
          >
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
        </a>
      </li>
      <li>
        <a
          href={linkedIn}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-blue-700 transition-colors"
          aria-label="LinkedIn"
          onclick="event.stopPropagation()"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="25"
            height="25"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="fa-linkedin"
          >
            <path
              d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
            ></path>
          </svg>
        </a>
      </li>

      <li>
        <a
          href={email}
          class="hover:text-gray-900 transition-colors"
          aria-label="Email"
          onclick="event.stopPropagation()"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="25"
            height="25"
            viewBox="2 2 20 20"
            fill="currentColor"
          >
            <path
              d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4-8 5-8-5V6l8 5 8-5v2z"
            ></path>
          </svg>
        </a>
      </li>
    </ul>
  </nav>
</div>
