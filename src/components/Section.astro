---
import { getEntry } from "astro:content";
import Experience from "./Experience.astro";
import Project from "./Project.astro";
import Footer from "./Footer.astro";
import Navbar from "./Navbar";
import About from "./About.astro";

// Load portfolio data
const portfolioData = await getEntry("portfolio", "portfolio");
const { about, experiences, projects } = portfolioData!.data;
---

<div
  class="flex flex-col mx-auto max-w-7xl px-6 py-10 sm:justify-between sm:flex-row sm:py-0"
>
  <div
    class="sm:min-h-screen sm:h-screen flex flex-col sm:justify-center space-y-8 sm:top-0 sm:sticky pt-16 py-28 sm:pt-0 sm:py-0"
  >
    <div class="space-y-1">
      <h1 class="text-4xl font-bold text-gray-900">asd</h1>
      <h2 class="text-xl font-medium text-gray-600">Full-Stack Engineer</h2>
      <p class="text-gray-700 max-w-xl pt-3">
        I build reliable, scalable systems and intuitive
        <br class="hidden sm:block" />
        interfaces that feel effortless to use.
      </p>
    </div>

    <nav aria-label="Main navigation" class="hidden sm:block">
      <Navbar client:load />
    </nav>

    <nav aria-label="Social media links">
      <ul class="flex space-x-4 text-gray-600">
        <li>
          <a
            href="https://github.com/yourname"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-gray-900 transition-colors"
            aria-label="GitHub"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="25"
              height="25"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="fa-github"
            >
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
          </a>
        </li>
        <li>
          <a
            href="https://linkedin.com/in/yourname"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-blue-700 transition-colors"
            aria-label="LinkedIn"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="25"
              height="25"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="fa-linkedin"
            >
              <path
                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
              ></path>
            </svg>
          </a>
        </li>
      </ul>
    </nav>
  </div>

  <div class="flex flex-col space-y-16 sm:max-w-2xl">
    <About about={about} />
    <Experience experiences={experiences} />
    <Project projects={projects} />
    <Footer />
  </div>
</div>
